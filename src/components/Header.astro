---
import Hamburger from './Hamburger.astro';
import Navigation from './Navigation.astro';
import ThemeIcon from './ThemeIcon.astro';
---
<header>
  <Hamburger />
  <ThemeIcon />
  <Navigation />
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    width: 100%;

    @media screen and (min-width: 636px) {
      justify-content: center;
    }
  }
</style>